<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/">
    <Frame name="BoarsToKillFrame" parent="UIParent" frameStrata="HIGH" enableMouse="true" movable="true">
        <Size>
            <AbsDimension x="200" y="70"/>
        </Size>
        <Anchors>
            <Anchor point="TOPLEFT">
                <Offset>
                    <AbsDimension x="10" y="-10"/>
                </Offset>
            </Anchor>
        </Anchors>
        <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
            <BackgroundInsets>
                <AbsInset left="11" right="12" top="12" bottom="11"/>
            </BackgroundInsets>
            <TileSize>
                <AbsValue val="32"/>
            </TileSize>
            <EdgeSize>
                <AbsValue val="32"/>
            </EdgeSize>
        </Backdrop>
        <Layers>
            <Layer level="OVERLAY">
                <FontString name="BoarsToKillText" inherits="GameFontNormal">
                    <Anchors>
                        <Anchor point="TOP" relativePoint="TOP" relativeTo="$parent">
                            <Offset>
                                <AbsDimension x="0" y="-10"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
                <FontString name="BoarsToKillTimeText" inherits="GameFontNormal">
                    <Anchors>
                        <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="BoarsToKillText">
                            <Offset>
                                <AbsDimension x="0" y="-5"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Scripts>
            <OnLoad>
                this:RegisterEvent("PLAYER_XP_UPDATE");
                this:RegisterEvent("PLAYER_LEVEL_UP");
                this:RegisterEvent("PLAYER_LOGOUT");
                BoarsToKill_OnLoad();
            </OnLoad>
            <OnEvent>
                BoarsToKill_OnEvent();
            </OnEvent>
            <OnUpdate>
                BoarsToKill_OnUpdate(arg1);
            </OnUpdate>
        </Scripts>
    </Frame>
</Ui> 